{
  "name": "formwork",
  "version": "0.1.0",
  "description": "A Form Framework",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "sass":    "node-sass --output-style expanded < formwork.scss | postcss -u autoprefixer > formwork.css",
    "sassmin": "node-sass < formwork.scss | postcss --no-map -u autoprefixer -u cssnano > formwork.min.css",
    "start": "node bs-simple.js",
    "build": "npm run sass && npm run sassmin",
    "watch:sass": "node-sass -w --output-style expanded ./*.scss -o ./",
    "watch:all": "parallelshell 'npm run watch:sass' 'npm start'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maddesigns/formwork.git"
  },
  "keywords": [
    "form",
    "framework"
  ],
  "author": "Sven Wolfermann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maddesigns/formwork/issues"
  },
  "browserslist": [
    "last 2 versions",
    "ie >= 9",
    "Android >= 4.4",
    "iOS > 8",
    "Firefox ESR",
    "> 2%"
  ],
  "homepage": "https://github.com/maddesigns/formwork/issues#readme",
  "dependencies": {
    "autoprefixer": "latest",
    "browser-sync": "latest",
    "bs-html-injector": "latest",
    "compression": "latest",
    "cssnano": "latest",
    "node-sass": "latest",
    "parallelshell": "latest",
    "postcss-cli": "latest",
    "watch": "latest"
  }
}
