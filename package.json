{
  "name": "formwork",
  "version": "0.6.0",
  "description": "A Form Framework",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "sass": "node-sass --source-map-embed --include-path scss --output-style expanded ./scss/ -o ./css",
    "postcss": "postcss css/**/*.css -rm -c postcss.config.js",
    "server": "node bs-simple.js",
    "bs": "browser-sync start --s './' --f './' 'css' --no-notify --no-ui --no-ghost-mode --logLevel info",
    "start": "npm run watch | npm run server",
    "build": "npm run sass",
    "postbuild": "npm run postcss",
    "watch": "npm run sass -- -w"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maddesigns/formwork.git"
  },
  "keywords": [
    "form",
    "framework"
  ],
  "author": "Sven Wolfermann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maddesigns/formwork/issues"
  },
  "browserslist": [
    "last 2 versions",
    "ie >= 9",
    "Android >= 4.4",
    "iOS > 8",
    "Firefox ESR",
    "> 2%"
  ],
  "homepage": "https://github.com/maddesigns/formwork/issues#readme",
  "dependencies": {
    "autoprefixer": "latest",
    "browser-sync": "latest",
    "bs-html-injector": "latest",
    "cssnano": "latest",
    "node-sass": "latest",
    "parallelshell": "latest",
    "postcss-cli": "latest",
    "watch": "latest"
  }
}
